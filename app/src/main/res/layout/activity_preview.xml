<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stebelski.PreviewActivity"
    android:background="@drawable/check_mark"
    >

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginBottom="42dp"
        android:layout_marginEnd="50dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="65dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/descriptionView"
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="20sp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_margin="20dp"
                android:background="@drawable/green_round_corners_with_shadow"
                android:onClick="goToTest"
                android:padding="10dp"
                android:text="@string/go_to_test" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
